<!DOCTYPE html>
<html>
  <head>
    <title>Fake Instagram</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <header>
      <div class="container header">
        <div id="logo">
          <img src="/img/logo.png">
        </div>
        <div class="busca">
          <form>
            <input type="search" class="search" placeholder="buscar usuarios">
          </form>
        </div>
        <nav>
          <a href="/">
            <img src="/img/icons/home.svg">
          </a>
          <a href="">
            <div class="avatar-content">
              <img class="avatar" src="/img/avatar-example.png">
              <b><%= user.username%></b>
            </div>
          </a>
        </nav>
      </div>
    </header>
    <main class="container content">
        <br><br>
        <h1>Nova Publicação</h1>
     <form action="/publicacao" method="POST" enctype="multipart/form-data">

        <input type="hidden" name="idUser" value="<%= user.id %>">
         
         <div class="group">
             <label for="upload">Upload da Imagem:</label><br><br>
             <input type="file" name="upload" id="upload">
         </div>
         <div class="group">
             <br>
             <button type="submit">Cadastrar Post</button>
         </div>
        <% if(typeof msgError !== 'undefined'){ %>
            <p><%= msgError %></p>
        <%}%>
     </form>
    </main>
  </body>
</html>
