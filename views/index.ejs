<!DOCTYPE html>
<html>
  <head>
    <title>Fake Instagram</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <header>
      <div class="container header">
        <div id="logo">
          <img src="/img/logo.png">
        </div>
        <div class="busca">
          <form>
            <input type="search" class="search" placeholder="buscar usuarios">
          </form>
        </div>
        <nav>
          <a href="/">
            <img src="/img/icons/home.svg">
          </a>
          <a href="">
            <div class="avatar-content">
              <img class="avatar" src="/img/avatar-example.png">
              <b><%= user.username%></b>
            </div>
          </a>
        </nav>
      </div>
    </header>


    <main class="container content">

      <% posts.forEach(post => {%>

      <div class="card">
        <div class="card-header">
          <div>
            <img class="avatar" src="/img/avatar-example.png">
            <b><%= post.users.username %></b>
          </div>
            <img src="/img/icons/more-vertical.svg">
        </div>
        <div class="card-img">
          <img src="/img/upload/publications/<%= post.image %>">
        </div>
        <div class="card-body">

          <div class="card-itens">
            <div class="likes">
              <a href="/like?id=<%= post.id%>&user=<%= user.id%>" class="<%= typeof user.like == 'undefined' ? 'teste' : user.like %>">
                <img src="/img/icons/heart.svg">
              </a>
                <b><%= post.like  %></b>
            </div>
            <b>Postado no dia: <%= `${moment(post.create_ate).format('DD/MM/YYYY HH:mm')}` %> </b>
          </div>
          <div class="card-comments">
            <% post.comments.forEach(comment => { %>
              <p><b><%= comment.user.username %></b> <%= comment.description %></p>
            <% }) %>
            <!-- <p><b>front.hendy</b><3 </p>
            <p><b>verofefo</b> aff.. </p> -->
          </div>
        </div>
        <form class="form-comments" action="/home" method="POST">
          <input type="text" placeholder="Adicione um comentÃ¡rio..." name="description">
          <input type="hidden" name="publicationId" value="<%= post.id %>">
          <button>Publicar</button>
        </form>
      </div>
    <%})%>
    </main>
    <script src="/js/index.js"></script>
  </body>
</html>
